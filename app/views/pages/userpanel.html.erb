<% if user_signed_in? %>
<div class="im-centered-2">
  <div class="col-lg-6 col-sm-6">
    <div class="card hovercard">
      <div class="card-background">
        <img class="card-bkimg" alt="" src="https://www.quiltednorthern.com/~/media/CPG/QNComFL/qncomfl/bg_blue">
      </div>
      <div class="useravatar">
        <% if current_user.avatar.present? %>
        <%= image_tag(current_user.avatar.url(:thumb)) %>
        <% else %>
        <img src="assets/images/missing_avatar.png" />
        <% end %>
        <div class="rank-label-container">
          <span class="label label-default rank-label"><%= current_user.points %> Puntos</span>
          <br />
          <% if current_user.level == 0 %>
            <span class="label label-default rank-label">  <i class="fa fa-user"></i> Aprendiz</span>
          <% else if (current_user.level == 1) %>
            <span class="label label-default rank-label">  <i class="fa fa-user"></i> Cómplice</span>
          <% else if (current_user.level == 2) %>
            <span class="label label-default rank-label">  <i class="fa fa-user"></i> Soñador</span>
          <% else if (current_user.level == 3) %>
            <span class="label label-default rank-label">  <i class="fa fa-user"></i> Empresario</span>
          <% end %>
          <% end %>
          <% end %>
          <% end %>
        </div>
      </div>
      <br />
      <br />
      <% if (current_user.name.nil? || current_user.name.blank?) && (current_user.lastname.nil? || current_user.lastname.blank?) %>
      <div class="card-info"> <span class="card-title"><%= current_user.email %></span></div>
      <% else if (current_user.name.present? && !current_user.name.blank?) && (current_user.lastname.present? && !current_user.lastname.blank?) %>
      <div class="card-info"> <span class="card-title"><%= current_user.name %> <%= current_user.lastname %> </span></div>
      <% else if current_user.name.present? && !current_user.name.blank? %>
      <div class="card-info"> <span class="card-title"><%= current_user.name %></span></div>
      <% else if current_user.lastname.present? && !current_user.lastname.blank? %>
      <div class="card-info"> <span class="card-title"><%= current_user.lastname %> </span></div>
      <% end %>
      <% end %>
      <% end %>
      <% end %>
    </div>
    <div class="btn-pref btn-group btn-group-justified btn-group-lg" role="group" aria-label="...">
      <div class="btn-group" role="group">
        <button type="button" id="stars" class="btn btn-primary" href="#tab1" data-toggle="tab"><span class="glyphicon glyphicon-star" aria-hidden="true"></span>
          <div class="hidden-xs">Puntos y Medallas <span class="badge"><%= current_user.points %></span></div>
        </button>
      </div>
      <div class="btn-group" role="group">
        <button type="button" id="following" class="btn btn-default" href="#tab2" data-toggle="tab"><span class="glyphicon glyphicon-user" aria-hidden="true"></span>
          <div class="hidden-xs">Mi Perfil</div>
        </button>
      </div>
      <div class="btn-group" role="group">
        <button type="button" id="favorites" class="btn btn-default" href="#tab3" data-toggle="tab"><span class="glyphicon glyphicon-heart" aria-hidden="true"></span>
          <div class="hidden-xs">Mis Sueños y Retos <span class="badge"><%= Dream.where(user_id: current_user.id).count %></span></div>
        </button>
      </div>
    </div>

    <div class="well">
      <div class="tab-content">
        <div class="tab-pane fade in active" id="tab1">
          <div class="rank-label-container">
            <span class="label label-default rank-label"><%= current_user.points %> Puntos</span>

            <ul>

            </ul>
          </div>
          <h3></h3>
        </div>
        <div class="tab-pane fade in" id="tab2">
          <!-- Progress bar -->
          <% if (current_user.username.nil? || current_user.username.blank?) && (current_user.name.nil? || current_user.name.blank? || current_user.lastname.nil? || current_user.lastname.blank?)   %>
          <b><center><p>Porcentaje de completación de tu perfil: 10% (¡Elige tu nombre de usuario y dinos tu nombre!)</p></center></b>
          <div class="progress">
            <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100" style="width: 10%">
              <span class="sr-only">10% Complete</span>
            </div>
          </div>
          <% else if (current_user.country.nil? || current_user.country.blank?) && (current_user.city.nil? || current_user.city.blank?) %>
          <b><center><p>Porcentaje de completación de tu perfil: 35%</p></center></b>
          <div class="progress">
            <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="35" aria-valuemin="0" aria-valuemax="100" style="width: 35%">
              <span class="sr-only">35% Complete</span>
            </div>
          </div>
          <% else if (current_user.country.nil? || current_user.country.blank?) && (current_user.city.nil? || current_user.city.blank?) %>
          <b><center><p>Porcentaje de completación de tu perfil: 50%</p></center></b>
          <div class="progress">
            <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100" style="width: 50%">
              <span class="sr-only">50% Complete</span>
            </div>
          </div>
          <% else if (current_user.region.nil? || current_user.region.blank?)  %>
          <b><center><p>Porcentaje de completación de tu perfil: 65%</p></center></b>
          <div class="progress">
            <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="65" aria-valuemin="0" aria-valuemax="100" style="width: 65%">
              <span class="sr-only">65% Complete</span>
            </div>
          </div>
          <% else if (current_user.region.nil? || current_user.region.blank?) && (current_user.facebook.nil? || current_user.facebook.blank?) && (current_user.twitter.nil? || current_user.twitter.blank?) %>
          <b><center><p>Porcentaje de completación de tu perfil: 75%</p></center></b>
          <div class="progress">
            <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: 75%">
              <span class="sr-only">75% Complete</span>
            </div>
          </div>
          <% else if (current_user.website.nil? || current_user.website.blank?) && (current_user.facebook.nil? || current_user.facebook.blank?) && (current_user.twitter.nil? || current_user.twitter.blank?) %>
          <b><center><p>Porcentaje de completación de tu perfil: 80%</p></center></b>
          <div class="progress">
            <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100" style="width: 80%">
              <span class="sr-only">80% Complete</span>
            </div>
          </div>
          <% else if (current_user.name.present? && !current_user.name.blank? && current_user.lastname.present? && !current_user.lastname.blank? && current_user.avatar.present? && current_user.username.present? && !current_user.username.blank? && current_user.facebook.present? && !current_user.facebook.blank? && current_user.twitter.present? && !current_user.twitter.blank? && current_user.country.present? && !current_user.country.blank? && current_user.region.present? && !current_user.region.blank? && current_user.city.present? && !current_user.city.blank?  && current_user.born_date.present? && !current_user.born_date.blank?) && current_user.website.present? && !current_user.website.blank?%>
          <b><center><p>Porcentaje de completación de tu perfil: 100%</p></center></b>
          <p>¡Felicidades! Tu perfil está completo :)</p>
          <div class="progress">
            <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
              <span class="sr-only">100% Complete</span>
            </div>
          </div>
          <% end %>
          <% end %>
          <% end %>
          <% end %>
          <% end %>
          <% end %>
          <% end %>
          <!-- Progress bar -->
          <div class="panel panel-primary">
            <div class="panel-heading">
              <center><b class="panel-title">Mis datos</b></center>
            </div>
            <div class="panel-body">
              <p><b>Usuario: </b><%= current_user.username %></p>
              <p><b>País: </b><%= current_user.country %></p>
              <p><b>Región: </b><%= current_user.region %></p>
              <p><b>Ciudad: </b><%= current_user.city %></p>
              <p><b>Cumpleaños: </b><%= current_user.born_date %></p>
              <%= link_to current_user.facebook do %><i class="fa fa-facebook"></i>
              <% end %>
              <br />
              <%= link_to current_user.twitter do %><i class="fa fa-twitter"></i>
              <% end %>
              <br />
              <%= link_to current_user.website do %><i class="fa fa-external-link"></i>
              <% end %>
            </div>
          </div>
          <%= link_to edit_user_registration_path, class: 'btn btn-primary' do %>
          <span class="glyphicon glyphicon-edit"></span> Completar perfil
          <% end %>
          <h3></h3>
        </div>
        <div class="tab-pane fade in" id="tab3">
          <div class="panel panel-primary">
            <div class="panel-heading">
              <center><b class="panel-title">Mi Contenido</b></center>
            </div>
            <div class="panel-body">
              <p><b>Mis sueños: </b></p>
              <% Dream.where(user_id: current_user.id).each do |dream| %>
              <li>
                <%= link_to dream.dream, dream %>
                <br />
                <br />
              </li>
              <% end %>
              <p><b>Soy cómplice de: </b></p>
              <% Complice.where(user_id: current_user.id).each do |complice| %>
              <li>
                <%= link_to complice.giving, complice %>
                <% #link_to (Complice.where(dream_id: (Dream.where(user_id: :user_id)))), complice %>
                <br />
                <br />
              </li>
              <% end %>

            </div>
          </div>

          <br />
          <% if Dream.where(user_id: current_user.id).count == 1 %>
          <strong><p>Actualmente tienes: <%= Dream.where(user_id: current_user.id).count %>  sueño</p></strong>
          <% else %>
          <strong><p>Actualmente tienes: <%= Dream.where(user_id: current_user.id).count %>  sueños</p></strong>
          <% end %>

        </div>
      </div>
    </div>
  </div>
</div>
</div>
<% else %>
<% #Script for redirect to sign_up form if user is not authenticated %>
<script type="text/javascript">
window.location.href="/users/sign_up"  // put your correct path in a string here
</script>
<% end %>
