<%= link_to 'Volver', dreams_path, class: "btn btn-info" %>
<center><%= link_to 'Crear Solución', new_solution_path, class: "btn btn-primary btn-lg" %></center>
<br />
<br />

<div id="dreams" class="transitions-enabled">

  <% @solutions.each do |solution| %>
  <div class="box panel panel-default">
    <%= link_to image_tag(solution.image.url(:medium)), solution %>

    <div class="panel-body">
    </div>

    <p><strong>Solución del Reto <%= solution.micropost_id %></strong></p>
    <p>Hecho por: </p>
    <strong><%= solution.user.name %> <%= solution.user.name %></strong>
    <%= solution.user.email %>
    <br><br>
    <p><%= solution.content %></p>
    <br>
    <!--<p> >> Reguemos semillas de papaya </p>-->
    <%= social_share_button_tag("My Site") %>

    <p><strong><%# dream.user.email if dream.user %> </strong></p>

    <% if solution.user == current_user %>
    <div class="actions">
      <%= link_to edit_solution_path(solution) do %><!-- mira del ( ) si es content -->
      <span class="glyphicon glyphicon-edit"></span>
      Editar
      <% end %>
      <%= link_to solution, method: :delete, data: { confirm: '¿Estás seguro?' } do %>
      <span class="glyphicon glyphicon-trash"></span>
      Borrar
      <% end %>
    </div>
    <% end %>
  </div>
  <% end %>

  <br />
